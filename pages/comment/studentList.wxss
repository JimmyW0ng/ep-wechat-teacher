.student-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e9e9e9;
  padding: 10px 20px;
}

.student-left {
  display: flex;
  align-items: center;
}

.student-avatar {
  margin-right: 15px;
  display: inline-block;
  width: 40px;
  height: 40px;
  border-radius: 40px;
}

.student-name {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
}

.student-count {
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
}
