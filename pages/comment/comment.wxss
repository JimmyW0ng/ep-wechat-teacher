/* pages/comment/comment.wxss */

.course-info {
  padding: 20px;
}

.course-name {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
  margin-bottom: 15px;
}

.course-desc {
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
}

.student-info {
  padding: 20px;
  padding-bottom: 100px;
}

.student-info .avatar-wrap {
  padding-bottom: 15px;
  text-align: center;
}

.student-info  .avatar {
  width: 80px;
  height: 80px;
  border-radius: 80px;
  display: inline-block;
}

.student-info .name {
  font-size: 20px;
  color: #1e293c;
  line-height: 20px;
  text-align: center;
}

.title {
  text-align: center;
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
  border-top: 1px solid #e9e9e9;
  margin-top: 25px;
}

.title .title-text {
  display: inline-block;
  background: #fff;
  padding: 10px 20px;
  transform: translateY(-50%);
}

.content-wrap {
  background: #f9f9f9;
  border: 1px solid #e9e9e9;
  border-radius: 4px;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
  color: #1e293c;
}

.content-textarea {
  border: 1px solid #e9e9e9;
  border-radius: 4px;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
  color: #1e293c;
  width: 100%;
  height: 120px;
}

.btn-wrap {
  margin-top: 30px;
  margin-bottom: 50px;
}


/* components/tagList/tagList.wxss */
.tag-list-select {
  padding: 20px;
  border-bottom: 1px solid #e9e9e9;
}

.tag-list-select .tag {
  padding: 8px 10px;
  display: inline-block;
  border: 1px solid #e9e9e9;
  box-sizing: border-box;
  border-radius: 4px;
  font-size: 14px;
  margin-right: 10px;
  margin-bottom: 10px;
  transition: all 0.2s ease-in-out;
}

.tag-list-select .tag.active {
  background: rgba(94, 228, 149, 0.2);
}