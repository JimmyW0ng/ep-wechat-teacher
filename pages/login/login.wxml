<!--pages/login/LoginPage.wxml-->
<view class="page">
  <view class='header'>
    <view>
      <image class='avatar' bindtap="bindViewTap" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
      </view>
    <view class='notice ripple'>欢迎回来 {{userInfo.nickName}} 老师</view>
  </view>

  <view class='body'>
    <view class='form-control'>
      <input maxlength="11" type="number" value="{{phone}}" bindinput="bindPhoneInput" placeholder="手机号码" />
    </view>

    <view class='ogn-list'>
      <view class='ogn-list-item' wx:for="{{ognList}}" wx:key="{{index}}">
        {{item.id}} {{item.ognName}}
      </view>
    </view>

    <view class="section">
      <view class="section__title">普通选择器</view>
      <picker bindchange="bindPickerChange" value="{{selectedIndex}}" range-key="ognName" range="{{ognList}}">
        <view class="picker">
          当前选择：{{ognList[selectedIndex].ognName}}
        </view>
      </picker>
    </view>

    <view class='form-control with-btn'>
      <input maxlength="6" type="number" value="{{captcha}}" bindinput="bindCaptchaInput" placeholder="验证码" />
      <view class='btn-send ripple' bindtap='doGetCaptcha'>
        {{verifyBtnText}}
      </view>
    </view>
  </view>

  <view class='footer'>
    <view class='btn-login ripple' bindtap='doGetOgnList'>
      机构
    </view>

    <view class='btn-login ripple' bindtap='doLogin'>
      <view class="iconfont icon-arrowsrightline"></view>
    </view>
  </view>
</view>