/* pages/userCenter/userCenter.wxss */

swiper-item {
  overflow-y: scroll;
}

.tab-content {
}

.course-list-wrap {
}

.course-list-item {
  display: flex;
  align-items: top;
  justify-content: space-between;
  padding: 20px;
  border-bottom: 1px solid #e9e9e9;
}

.course-avatar {
  display: inline-block;
  width: 80px;
  height: 80px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 4px;
}

.course-info {
  flex: 1;
}

.course-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15px;
}

.course-org-name {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
}

.course-date {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.course-name {
  font-size: 12px;
  color: #7d8794;
  line-height: 12px;
}

.course-desc {
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
}

.course-bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.course-price {
  font-size: 14px;
  color: #1e293c;
  line-height: 14px;
}

.course-price .num {
  font-size: 18px;
  display: inline-block;
  padding-top: 10px;
}

.course-learn-num {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.status {
  font-size: 14px;
  color: #5ee495;
  line-height: 14px;
}

.status.disabled {
  color: #a4afbf;
}

.course-detail-footer {
}

.student-list-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #e9e9e9;
  padding: 10px 20px;
}

.student-left {
  display: flex;
  align-items: center;
}

.student-avatar {
  margin-right: 15px;
  display: inline-block;
  width: 40px;
  height: 40px;
  border-radius: 40px;
}

.student-name {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
}

.student-count {
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
}
