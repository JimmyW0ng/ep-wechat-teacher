/* pages/class/beSpeakDetail.wxss */


.course-list-item {
  display: flex;
  align-items: top;
  justify-content: space-between;
  padding: 20px;
  border-bottom: 1px solid #e9e9e9;
}

.course-avatar {
  display: inline-block;
  width: 80px;
  height: 80px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 4px;
}

.course-info {
  flex: 1;
}

.course-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 15px;
}

.course-org-name {
  font-size: 16px;
  color: #1e293c;
  line-height: 16px;
}

.course-date {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.course-name {
  font-size: 12px;
  color: #7d8794;
  line-height: 12px;
}

.course-desc {
  font-size: 14px;
  color: #7d8794;
  line-height: 14px;
}

.course-bottom-info {
  text-align: right;
}