/* pages/userCenter/userCenter.wxss */

.header {
  padding: 50px 20px;
  height: 190px;
  box-sizing: border-box;
  background-image: linear-gradient(90deg, #5ee495 0%, #2ad5f3 100%);
  display: flex;
  align-items: center;
  position: relative;
  color: #fff;
  font-size: 14px;
}

.avatar {
  display: inline-block;
  width: 75px;
  height: 75px;
  border-radius: 75px;
  border: 2px solid #fff;
  background: #fff;
}

.info {
  padding-left: 20px;
}

.name {
  font-size: 18px;
}

.icon-setting {
  position: absolute;
  top: 20px;
  right: 20px;
}

swiper-item {
  overflow-y: scroll;
}

.course-list-wrap {
}

.course-list-item {
  display: flex;
  align-items: top;
  justify-content: space-between;
  padding: 15px;
  border-bottom: 1px solid #e9e9e9;
}

.course-avatar {
  display: inline-block;
  width: 80px;
  height: 80px;
  overflow: hidden;
  margin-right: 12px;
  border-radius: 4px;
}

.course-info {
  flex: 1;
}

.course-org-name {
  color: #1e293c;
  margin-bottom: 8px;
  margin-top: 3px;
  font-size: 14px;
  line-height: 14px;
}

.course-name {
  font-size: 12px;
  color: #7d8794;
  line-height: 12px;
}

.course-name .basic {
  display: inline-block;
}

.course-hour {
  display: inline-block;
  margin-left: 15px;
}

.course-simple-info {
  display: flex;
  align-items: center;
}

.course-start-date{
  font-size: 12px;
  color: #7d8794;
  line-height: 12px;
  margin-top: 8px;
}

.course-bottom-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8px;
  height: 30px;
}

.course-price {
  font-size: 14px;
  color: #1e293c;
  line-height: 14px;
    display: flex;
  align-items: center;
}

.course-price .num {
  font-size: 18px;
  display: inline-block;
}

.btn-wrap .btn-ghost {
  margin-left: 5px;
}

.course-learn-num {
  font-size: 12px;
  color: #a4afbf;
  line-height: 12px;
}

.course-status {
  font-size: 14px;
  color: #5ee495;
  line-height: 14px;
}

.course-status.disabled {
  color: #999;
}