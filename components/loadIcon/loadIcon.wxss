body {
  background-color: rgba(400, 0, 0, 0.3);
}

.img {
  width: 100px;
  height: 100px;
  border-radius: 100%;
  position: absolute;
  border: 1px solid #2ad5f3;
  animation: up 3s;
  animation-iteration-count: infinite;
  transition: 3s;
  border-bottom: none;
  border-right: none;
  animation-timing-function: linear;
  margin-left: -50px;
  margin-top: -50px;
  left: 50%;
  top: 50%;
}

@keyframes up {
  from {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

